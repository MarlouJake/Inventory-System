@{

    Layout = null;
}
<style>
    .comming-soon > span{
        margin-top: 5rem;
        font-size: 3rem;
        width: 5rem;
        height: 5rem;
    }
</style>

<script>

    $(document).ready(function(){
        loadPartialView('dashboard/partial_views/inventory-summary', 'inventory-summary');
    });


   async function loadPartialView(url, id){
        $.ajax({
            url: url,
            type: 'GET',
            success: function (response) {
                $(`#${id}`).html(response);
            },
            error: function () {
                let errorText = 'An error occurred while loading partial view';
                $(`#${id}`).html(errorText);
                console.error(errorText);
            }
        });
   }

</script>
