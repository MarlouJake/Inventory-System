<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/popup-messages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventorySystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>

    <script src="~/js/messages.js" asp-append-version="true" defer></script>
    <script src="~/js/components.js" asp-append-version="true" defer></script>
    <script src="~/js/utils.js" asp-append-version="true" defer></script>
    <script src="~/js/validate-form.js" asp-append-version="true" defer></script>
    <script src="~/js/requests.js" asp-append-version="true" defer></script>

    <script src="~/js/assets-modal.js" asp-append-version="true" defer></script>
    <script src="~/js/assets-data.js" asp-append-version="true" defer></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    
    
</head>
<body id="layoutbody">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom box-shadow mb-3 index-navbar">
            <div class="container-fluid">
                <a class="navbar-brand text-orange" asp-area="" asp-controller="Home" asp-action="Index">Inventory System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a class="nav-link text-light active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                    </ul>
                    
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
     
        <div id="success-message" style="display: none; position: fixed; top: 10px; left: 50%; transform: translateX(-50%); padding: 10px; background-color: #7eca8f; color: white; border-radius: 5px;">
        </div>
        <div id="error-message" style="display: none; position: fixed; top: 10px; left: 50%; transform: translateX(-50%); padding: 10px; background-color: #FF5252; color: white; border-radius: 5px;">
        </div>        

        <div role="main" class="pb-3 m-2 mt-5" id="container-main">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-center">
            &copy; 2024 - Inventory System - MJN         
        </div>
    </footer>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>